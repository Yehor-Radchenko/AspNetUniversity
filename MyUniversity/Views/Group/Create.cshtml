@model MyUniversity.Models.Group

<h2>New group</h2>
<form asp-action="Create" asp-controller="Group">
    <p>
        <label asp-for="Name">Title</label><br />
        <input type="text" asp-for="Name" />
    </p>
    <p>
        <label asp-for="CourseId">Course</label><br />
        <select asp-for="CourseId" asp-items="@(ViewBag.AllCourses)">
            <option value="">Select a course</option>
        </select>
    </p>
    <p>
        <input type="submit" value="Save" />
    </p>
</form>