@model IEnumerable<MyUniversity.Models.Student>

<h2>Students List</h2>
<a asp-action="Create">Create</a>
<table class="table" border="1">
    <tr><th>First Name</th><th>Last Name</th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td width="70">@item.FirstName</td>
            <td width="100">@item.LastName</td>
            <td width="100">@item.Group.Name</td>
            <td>
                <p>
                    <a asp-action="Edit" asp-controller="Student" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-controller="Student" asp-route-id="@item.Id">Delete</a>
                </p>
            </td>
        </tr>
    }
</table>